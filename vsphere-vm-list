#!/usr/bin/env python
# $Id$

from __future__ import print_function
from vspherelib import *

def get_args():
    parser = get_args_setup()
    args = parser.parse_args()
    return args

def main():
    args = get_args()
    si   = hconnect( args )

    vmlist = get_obj_props( si, [vim.VirtualMachine], [ 'name' ] )
    namelist = [ vm[ 'name' ] for vm in vmlist ]
    namelist.sort()

    for name in namelist:
        print( name )

if __name__ == '__main__':
    main()

# eof
