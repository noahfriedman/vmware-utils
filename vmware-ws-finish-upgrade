#!/bin/sh
# $Id: vmware-finish-upgrade,v 1.1 2014/08/21 01:41:40 friedman Exp $

docmd()
{
    echo + "$@" 1>&2
    "$@"
}

main()
{
    case ${EUID-${UID-`id -u`}} in
        0 ) : ;;
        * ) exec sudo "$0" "$@" || exit $? ;;
    esac

    vmware-ws-ctl system stop

    svcs='vmware
          vmamqpd
          vmware-USBArbitrator
          vmware-workstation-server
         '

    for svc in $svcs ; do
        docmd chkconfig $svc off
    done

    (   cd /etc &&
            hg-revert -v vmware/vmnet8/dhcpd/dhcpd.conf \
                         vmware/vmnet8/nat/nat.conf
    )
}

main "$@"

# eof
